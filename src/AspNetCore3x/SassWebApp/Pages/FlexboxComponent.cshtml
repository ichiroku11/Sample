@page
@{
	ViewBag.Title = "Flexboxを使ったコンポーネント";
}

@functions {
	private enum Icon {
		Archive,
		ChatLeft,
		ChevronLeft,
		HandThumbsUp,
		Star,
		Tag,
		ThreeDots,
		Trash,
		Upload,
	}

	private void RenderIcon(Icon icon) {
		switch (icon) {
			case Icon.Archive:
				<svg class="bi bi-archive" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
